{
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"openai": "^4.104.0"
	},
	"description": "Complete CLI toolkit - Commands, Components, and Prompts",
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^24.10.4",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"keywords": [
		"cli",
		"command",
		"prompt",
		"components",
		"terminal",
		"tui",
		"typescript"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"name": "create-cli-from-ts",
	"scripts": {
		"watch": "bun lint && bun watch && bun test",
		"start": "bun --watch dev && vitest:ui",
		"postinstall": "bunx taze -r -w -i",
		"dev": "bun run src/index.ts",
		"lint": "tsc --noEmit && biome lint --write",
		"build": "tsdown",
		"format": "biome format --write",
		"test": "vitest --run",
		"verify": "bun format && bun lint && bun test && bun audit && run build"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"version": "0.0.1",
	"packageManager": "bun@1.3.5"
}
