{
	"name": "@wpackages/bench",
	"version": "0.0.1",
	"private": true,
	"bin": {
		"wbench": "./dist/bin/cli.js"
	},
	"type": "module",
	"description": "Benchmarking utility for WTS packages with functional programming patterns",
	"keywords": [
		"benchmark",
		"performance",
		"testing",
		"typescript",
		"functional"
	],
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"exports": {
		".": "./dist/index.mjs",
		"./bin/cli": "./dist/bin/cli.mjs",
		"./package.json": "./package.json"
	},
	"files": ["dist", "README.md"],
	"scripts": {
		"watch": "bun lint && bun --watch src/bin/cli.ts && bun test",
		"start": "bun --watch src/bin/cli.ts && bun run test:ui",
		"dev": "bun run src/bin/cli.ts",
		"lint": "oxlint --fix --type-aware",
		"build": "tsdown",
		"postbuild": "bun run src/scripts/add-shebang.ts",
		"format": "dprint fmt",
		"test": "vitest --run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"audit": "bun audit",
		"verify": "bun format && bun lint && bun test && bun run build"
	},
	"dependencies": {
		"@effect/schema": "^0.75.5",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/sdk-trace-base": "^1.30.1",
		"@wpackages/cli-components": "workspace:*",
		"@wpackages/schema": "workspace:*",
		"@wpackages/tracing": "workspace:*",
		"effect": "^3.19.14",
		"picocolors": "^1.1.1",
		"tinybench": "^2.9.0"
	},
	"devDependencies": {
		"@types/bun": "^1.3.5",
		"@types/node": "^25.0.3",
		"execa": "^9.6.1",
		"fast-check": "^4.5.3",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"module": "./dist/index.mjs"
}
