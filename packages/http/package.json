		"verify": "bun run lint && bun run build"
	},
	"dependencies": {
		"@effect/platform": "^0.94.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"oxlint": "^1.36.0",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3"
	}
}
