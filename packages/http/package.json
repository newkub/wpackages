{
	"name": "@wpackages/http",
	"private": true,
	"version": "0.1.0",
	"description": "HTTP utilities for wpackages",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"build": "tsdown src/index.ts --out-dir dist",
