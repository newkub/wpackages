{
	"name": "@wpackages/database",
	"private": true,
	"version": "0.1.0",
	"description": "Database utilities for wpackages using Drizzle ORM",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"scripts": {
		"build": "tsdown src/index.ts --out-dir dist",
		"dev": "tsdown src/index.ts --watch",
		"lint": "oxlint --fix --type-aware",
		"verify": "bun run lint && bun run build"
	},
	"dependencies": {
		"drizzle-orm": "^0.45.1",
		"effect": "^3.19.14",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/pg": "^8.16.0",
		"oxlint": "^1.36.0",
		"tsdown": "^0.18.4",
		"typescript": "^5.9.3"
	}
}
